<sitemesh>
  <page-parsers>
    <parser class="org.codehaus.groovy.grails.web.sitemesh.GrailsHTMLPageParser" content-type="text/html"/>
    <parser class="org.codehaus.groovy.grails.web.sitemesh.GrailsHTMLPageParser" content-type="text/html;charset=ISO-8859-1"/>
    <parser class="org.codehaus.groovy.grails.web.sitemesh.GrailsHTMLPageParser" content-type="text/html;charset=UTF-8"/>
  </page-parsers>
  <decorator-mappers>
    <mapper class="org.codehaus.groovy.grails.web.sitemesh.GrailsLayoutDecoratorMapper"/>
  </decorator-mappers>
  <excludes file="/WEB-INF/atmosphere-decorators.xml"/>
</sitemesh>
